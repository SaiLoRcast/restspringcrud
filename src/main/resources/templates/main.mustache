<html>

<body>
<div>
    <form method="post">
        <input type="text" name="title" placeholder="Введите наименование товара" />
        <input type="text" name="description" placeholder="Описание товара">
        <input type="text" name="category" placeholder="Категория товара">
        <button type="submit">Добавить</button>
    </form>
</div>

<div>Список товаров</div>
<form method="post" action="filter">
    <input type="text" name="filter">
    <button type="submit">Найти</button>
</form>
{{#goods}}
<div>
    <b>{{id}}</b>
    <span>{{title}}</span>
    <span>{{description}}</span>
    <span>{{category}}</span>
</div>
{{/goods}}
</body>
</html>